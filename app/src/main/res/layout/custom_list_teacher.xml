<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="?android:selectableItemBackground"
    android:minHeight="48dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Nhóm thông tin giáo viên -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- First Name -->
        <TextView
            android:id="@+id/tv_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:contentDescription="Họ giáo viên"
            android:text="@string/tv_firstname"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Last Name -->
        <TextView
            android:id="@+id/tv_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:contentDescription="Tên giáo viên"
            android:text="@string/tv_lastname"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Email -->
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:contentDescription="Email giáo viên"
            android:text="@string/tv_email"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Department -->
        <TextView
            android:id="@+id/tv_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:contentDescription="Khoa của giáo viên"
            android:text="@string/tv_department"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Biểu tượng xóa -->
    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:contentDescription="Xóa giáo viên"
        android:focusable="true"
        android:tooltipText="Xóa giáo viên"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_delete" />
</LinearLayout>