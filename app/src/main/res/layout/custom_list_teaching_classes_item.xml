<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtClassesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classes's name"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtNumberStudentInClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number students in class" />

    <TextView
        android:id="@+id/txtNumberStudentHaveScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number students have score" />

</LinearLayout>